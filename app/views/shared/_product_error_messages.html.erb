<% if @product.errors.any? %>
  <div class="message-banner error-banner" id="error_explanation">
    <div class="banner-content">
      <p>
        <strong>The form contains <%= pluralize(@product.errors.count, "error") %>.</strong>
      </p>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %>.</li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>