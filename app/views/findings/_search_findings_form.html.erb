<%= form_tag finding_search_path, method: :get do %>
  <div class="form-row">
  	<div class="form-row-column column-24">
    	<%= label_tag :description %>
    	<%= text_field_tag :description, params[:description] %>
    </div>
  </div>

	<div class="form-row">
  	<div class="form-row-column column-11">
    	<%= label_tag :products %>
    	<%= text_field_tag :products, params[:products] %>
    </div>
    <div class="form-row-column column-11 push-2">
    	<%= label_tag :platforms %>
    	<%= text_field_tag :platforms, params[:platforms] %>
    </div>
  </div>

  <div class="form-row">
  	<div class="form-row-column column-11">
    	<%= label_tag :study_name %>
    	<%= text_field_tag :study_name, params[:study_name] %>
    </div>
    <div class="form-row-column column-11 push-2">
    	<%= label_tag :tags %>
    	<%= text_field_tag :tags, params[:tags] %>
    </div>
  </div>

  <div class="form-row">
  	<div class="symphony">
    	<div class="btn-bg">
    		<%= submit_tag "Search", name: nil %>
    	</div>
    </div>
  </div>
<% end %>