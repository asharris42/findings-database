<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

    <%= form_for(:session, url: sessions_path) do |f| %>

      <div class="form-row">
        <div class="form-row-column column-12">
        	<%= f.label :email %>
      		<%= f.text_field :email, class: "focus" %>
      	</div>
      </div>

      <div class="form-row">
        <div class="form-row-column column-12">
        	<%= f.label :password %>
      		<%= f.password_field :password %>
      	</div>
      </div>

      <div class="form-row">
        <div class="form-row-column column-12">
        	<div class="symphony">
            	<div class="btn-bg">
        			<%= f.submit "Sign in" %>
        		</div>
        	</div>
        </div>
    </div>
    <% end %>