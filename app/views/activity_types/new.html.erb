<% provide(:title, 'New Activity Type') %>
<h1>New Activity Type</h1>

    <%= form_for(@activity_type) do |f| %>

      <div class="form-row">
        <div class="form-row-column column-12">
          <%= f.label :type_name %>
          <%= f.text_field :type_name, class: "focus" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-row-column column-12">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-row-column column-12">
          <div class="symphony">
            <div class="btn-bg">
              <%= f.submit "Create activity type" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
