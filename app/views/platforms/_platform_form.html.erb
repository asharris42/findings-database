<%= render 'shared/platform_error_messages' %>

<%= form_for(@platform) do |f| %>

      <div class="form-row">
        <div class="form-row-column column-12">
          <%= f.label :platform_name %>
          <%= f.text_field :platform_name, class: "focus" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-row-column column-12">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-row-column column-12">
          <div class="symphony">
            <div class="btn-bg">
              <% if (params[:action] == 'new') | (params[:action] == 'create') %>
                <%= f.submit "Create platform" %>
              <% else %>
                <%= f.submit "Edit platform" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>